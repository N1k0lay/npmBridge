# ===========================================
# npm hub - Environment Configuration
# ===========================================

# Verdaccio Settings
VERDACCIO_PORT=4873

# Web App Settings
WEBAPP_PORT=4013

# Paths (relative to project root)
# Storage где Verdaccio хранит пакеты (только чтение для webapp)
STORAGE_DIR=./storage

# Frozen - синхронизированное состояние для корп. сетей
# Внутри создаются поддиректории для каждой сети (default, backup-site, и т.д.)
FROZEN_DIR=./frozen

# Diff archives - архивы с изменениями для переноса
DIFF_ARCHIVES_DIR=./diff_archives

# Scripts directory
SCRIPTS_DIR=./scripts

# Performance Settings
# Количество параллельных задач при обновлении пакетов
PARALLEL_JOBS=40

# Период для поиска недавно изменённых пакетов (в минутах)
MODIFIED_MINUTES=2880
